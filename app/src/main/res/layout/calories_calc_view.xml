<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Tabs">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/calories_icon_calc"
        android:layout_marginRight="20dp"
        android:src="@drawable/calories"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="caloriesOnclickCalculator" />

    <TextView
        android:id="@+id/calories_count_calc"
        android:gravity="center"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:text="0"
        android:textSize="100dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/transparent"
        android:textColor="@color/xenViolet"
        android:textStyle="bold|italic"
        android:typeface="sans"
        android:visibility="visible"
        android:alpha="1.0"
        android:layout_marginLeft="17dp"
        android:textIsSelectable="false"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/calories_icon_calc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/calories_label"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="Cal"
        android:textSize="15dp"
        android:layout_marginRight="0dp"
        android:background="@color/com_facebook_blue"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:typeface="sans"
        android:visibility="visible"
        android:alpha="1.0"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/reset_icon_calc"
        android:layout_marginRight="20dp"
        android:src="@drawable/reset"
        android:visibility="visible"
        android:onClick="resetOnclickCalculator"
        android:layout_marginBottom="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>